<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Translate" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Translate" parent="Base.Theme.Translate" />
    <style name="FadeInAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_out</item>
    </style>

    <style name="back_button">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="BubbleButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/button_background</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:padding">16dp</item>
    </style>
</resources>