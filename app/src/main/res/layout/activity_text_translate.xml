<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".AlwaysAvailablePages.TextTranslateActivity">



    <!-- Language Selection -->
    <LinearLayout
        android:id="@+id/languageSelection"
        android:layout_width="match_parent"
        android:background="@drawable/language_selection"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:elevation="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/selectTranslateFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Language"
            android:background="@color/transparent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_right_alt_24"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/selectTranslateTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Language"
            android:background="@color/transparent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/languageSelection"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/typeTranslateFrom"
            android:layout_width="375dp"
            android:layout_height="200dp"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/text_box_background"
            android:gravity="top"
            android:elevation="10dp"
            android:hint="Start Typing Here"
            android:padding="20dp"
            android:textSize="20sp" />

        <RelativeLayout
            android:layout_width="375dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:elevation="10dp"
            android:background="@drawable/text_box_background">

            <TextView
                android:backgroundTint="@color/activityBackground"
                android:id="@+id/translateToText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background"
                android:gravity="top"
                android:textColor="@color/black"
                android:hint="Translated Text"
                android:padding="20dp"
                android:textSize="20sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/copyBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="-25dp"
                android:layout_marginBottom="1dp"
                android:background="@color/transparent"
                app:icon="@drawable/baseline_content_copy_24" />
        </RelativeLayout>
    </LinearLayout>






    <!-- custom NavBar -->
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:background="@color/activityBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/image"
            app:icon="@drawable/baseline_image_24"
            android:background="@drawable/menu_icon"
            android:gravity="center"
            android:padding="0dp"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            android:minWidth="50dp"
            android:minHeight="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginTop="30dp"
            android:textAlignment="gravity"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/text"
            android:backgroundTint="@color/button_background"
            app:icon="@drawable/baseline_text_snippet_24"
            android:gravity="center"
            android:padding="0dp"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            android:minWidth="50dp"
            android:minHeight="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textAlignment="gravity"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/audio"
            android:background="@drawable/menu_icon"
            app:icon="@drawable/outline_mic_24"
            android:gravity="center"
            android:padding="0dp"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            android:minWidth="50dp"
            android:minHeight="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textAlignment="gravity"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/downloadLanguages"
            android:background="@drawable/menu_icon"
            app:icon="@drawable/baseline_file_download_24"
            android:gravity="center"
            android:padding="0dp"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            android:minWidth="50dp"
            android:minHeight="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textAlignment="gravity"/>

    </LinearLayout>
</RelativeLayout>
