<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".AlwaysAvailablePages.TextTranslateActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/goBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@color/floatingActionBtn"
        app:shapeAppearanceOverlay="@style/back_button"
        android:src="@drawable/baseline_home_24" />

    <RelativeLayout
        android:id="@+id/container"
        android:layout_above="@id/nav"
        android:layout_below="@id/goBackButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/translateFromToButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/selectTranslateFrom"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:textColor="@color/white"
                android:text="Select Language"
                android:textSize="12sp"
                android:layout_marginStart="5dp"
                app:icon="@drawable/baseline_arrow_drop_down_24"
                app:iconTint="@color/white"
                app:iconGravity="end"
                app:iconPadding="0dp" />

            <ImageView
                android:id="@+id/switchLanguage"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:textAlignment="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@color/transparent"
                android:src="@drawable/baseline_arrow_right_alt_24"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/selectTranslateTo"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:textColor="@color/white"
                android:background="@color/transparent"
                android:text="Select Language"
                android:textSize="12sp"
                app:icon="@drawable/baseline_arrow_drop_down_24"
                app:iconTint="@color/white"
                app:iconGravity="end"
                app:iconPadding="0dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:gravity="center">

            <EditText
                android:id="@+id/typeTranslateFrom"
                android:layout_width="325dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/background"
                android:gravity="top"
                android:hint="Start Typing Here"
                android:padding="20dp"
                android:textSize="20sp" />

            <RelativeLayout
                android:layout_width="325dp"
                android:layout_height="150dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/translateToText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background"
                    android:gravity="top"
                    android:hint="Translated Text"
                    android:padding="20dp"
                    android:textSize="20sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/copyBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="-25dp"
                    android:layout_marginBottom="1dp"
                    android:background="@color/transparent"
                    app:icon="@drawable/baseline_content_copy_24" />
            </RelativeLayout>

            <com.google.android.material.button.MaterialButton
                android:layout_marginTop="20dp"
                android:id="@+id/translate"
                style="@style/BubbleButtonStyle"
                android:layout_width="150dp"
                android:layout_height="65dp"
                android:fontFamily="sans-serif"
                android:text="Translate"
                app:icon="@drawable/baseline_translate_24"
                android:layout_gravity="center_horizontal"
                android:textAllCaps="false"/>
        </LinearLayout>
    </RelativeLayout>

    <com.ismaeldivita.chipnavigation.ChipNavigationBar
        android:id="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_bar_shape"
        android:padding="15dp"
        android:layout_alignParentBottom="true"
        android:foregroundGravity="bottom"
        app:cnb_menuResource="@menu/menu_bar"
        android:layout_margin="10dp"
        app:cnb_iconSize="15dp"
        app:cnb_unselectedColor="#777777"/>
</RelativeLayout>
