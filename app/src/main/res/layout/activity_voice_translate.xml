<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".AlwaysAvailablePages.VoiceTranslateActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/goBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:shapeAppearanceOverlay="@style/back_button"
        android:src="@drawable/baseline_home_24"
        />

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/nav"
        android:layout_below="@id/goBackButton"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/translateFromToButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/selectTranslateFrom"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:text="Select Language"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_marginStart="5dp"
                android:fontFamily="sans-serif"
                app:icon="@drawable/baseline_arrow_drop_down_24"
                app:iconTint="@color/white"
                app:iconGravity="end"
                app:iconPadding="0dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:textAlignment="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/white"
                android:background="@color/transparent"
                android:src="@drawable/baseline_arrow_right_alt_24"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/selectTranslateTo"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:background="@color/transparent"
                android:text="Select Language"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:icon="@drawable/baseline_arrow_drop_down_24"
                app:iconTint="@color/white"
                app:iconGravity="end"
                app:iconPadding="0dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/translateFromToButtons"
            android:layout_centerInParent="true"
            android:layout_marginTop="1dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recordedTextView"
                android:layout_width="375dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/background"
                android:hint="Text Spoken Will Be Displayed Here"
                android:padding="20dp"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/micButton"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:gravity="center"
                    android:textAllCaps="false"
                    style="@style/BubbleButtonStyle"
                    android:textColor="@color/white"
                    android:text="Press to Record"
                    app:icon="@drawable/outline_mic_24"
                    app:iconSize="24dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/translate"
                    style="@style/BubbleButtonStyle"
                    app:icon="@drawable/baseline_translate_24"
                    android:layout_width="150dp"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:layout_height="65dp"
                    android:layout_gravity="center"
                    android:textAllCaps="false"
                    android:layout_marginStart="16dp"
                    android:gravity="center"
                    android:text="Translate" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/record"
            android:layout_centerInParent="true"
            android:paddingTop="20dp"
            android:orientation="vertical">


            <com.google.android.material.button.MaterialButton
                style="@style/BubbleButtonStyle"
                android:id="@+id/playAudio"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:gravity="center"
                android:text="Play Translated Audio"
                android:textColor="@color/white"
                app:icon="@drawable/outline_play_circle_24"
                app:iconSize="24dp" />

        </LinearLayout>

    </RelativeLayout>

    <com.ismaeldivita.chipnavigation.ChipNavigationBar
        android:id="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_bar_shape"
        android:padding="15dp"
        android:layout_alignParentBottom="true"
        android:foregroundGravity="bottom"
        app:cnb_menuResource="@menu/menu_bar"
        android:layout_margin="10dp"
        app:cnb_iconSize="15dp"
        app:cnb_unselectedColor="#777777"/>



</RelativeLayout>