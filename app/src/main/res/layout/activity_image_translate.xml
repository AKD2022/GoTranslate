<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".AlwaysAvailablePages.ImageTranslateActivity">

    <!-- Back Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/goBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/baseline_home_24"
        android:contentDescription="Go back"
        app:backgroundTint="@color/floatingActionBtn"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MaterialComponents.FloatingActionButton"/>

    <!-- Language Selection -->
    <LinearLayout
        android:id="@+id/languageSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/goBackButton"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/selectTranslateFrom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="From"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:backgroundTint="@color/primaryColor"
            app:icon="@drawable/baseline_arrow_drop_down_24"
            android:iconTint="@color/white"
            app:cornerRadius="8dp"
            app:iconGravity="end"
            android:padding="10dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_right_alt_24"
            app:tint="@color/white"
            android:padding="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/selectTranslateTo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="To"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:backgroundTint="@color/primaryColor"
            app:icon="@drawable/baseline_arrow_drop_down_24"
            android:iconTint="@color/white"
            app:cornerRadius="8dp"
            app:iconGravity="end"
            android:padding="10dp"/>

    </LinearLayout>

    <!-- Image Container -->
    <LinearLayout
        android:id="@+id/imageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/languageSelection"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:background="@drawable/image_background"
            android:contentDescription="Selected image"
            android:scaleType="centerInside"
            android:src="@drawable/baseline_image_24"/>

    </LinearLayout>

    <!-- Button Container -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageContainer"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/takePicture"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Take Photo"
            android:textColor="@color/white"
            android:backgroundTint="@color/button_background"
            app:cornerRadius="12dp"
            app:icon="@drawable/outline_add_a_photo_24"
            app:iconTint="@color/white"
            app:iconPadding="8dp"
            android:textAllCaps="false"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/openPhotos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Select Photo"
            android:textColor="@color/white"
            android:backgroundTint="@color/button_background"
            app:cornerRadius="12dp"
            app:icon="@drawable/outline_photo_library_24"
            app:iconTint="@color/white"
            app:iconPadding="8dp"
            android:textAllCaps="false"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

    <!-- Translate Button -->
    <LinearLayout
        android:id="@+id/translateBtnContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/buttonContainer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/translate"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Translate"
            android:textColor="@color/white"
            android:backgroundTint="@color/primaryColor"
            app:cornerRadius="12dp"
            app:icon="@drawable/baseline_translate_24"
            android:iconTint="@color/white"
            app:iconPadding="8dp"
            android:textAllCaps="false"/>

    </LinearLayout>

    <!-- Bottom Navigation -->
    <com.ismaeldivita.chipnavigation.ChipNavigationBar
        android:id="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/background_bar_shape"
        android:padding="15dp"
        app:cnb_menuResource="@menu/menu_bar"
        app:cnb_iconSize="24dp"
        app:cnb_unselectedColor="#777777"/>

</RelativeLayout>
