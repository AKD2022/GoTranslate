<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".AlwaysAvailablePages.ImageTranslateActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/goBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/floatingActionBtn"
        android:layout_margin="20dp"
        app:shapeAppearanceOverlay="@style/back_button"
        android:src="@drawable/baseline_home_24" />


    <LinearLayout
        android:id="@+id/languageSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_below="@id/goBackButton">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/selectTranslateFrom"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:text="Select Language"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_marginStart="5dp"
            android:fontFamily="sans-serif"
            app:icon="@drawable/baseline_arrow_drop_down_24"
            app:iconTint="@color/white"
            app:iconGravity="end"
            app:iconPadding="0dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:textAlignment="center"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:textColor="@color/white"
            android:background="@color/transparent"
            android:src="@drawable/baseline_arrow_right_alt_24"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/selectTranslateTo"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
            android:background="@color/transparent"
            android:text="Select Language"
            android:textColor="@color/white"
            android:fontFamily="sans-serif"
            android:textSize="12sp"
            app:icon="@drawable/baseline_arrow_drop_down_24"
            app:iconTint="@color/white"
            app:iconGravity="end"
            app:iconPadding="0dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/imageContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/languageSelection"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="25dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_height="250dp"
            android:src="@drawable/baseline_image_24" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_below="@id/imageContainer"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/takePicture"
            style="@style/BubbleButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginEnd="5dp"
            app:icon="@drawable/outline_add_a_photo_24"
            android:fontFamily="sans-serif"
            android:textColor="@color/white"
            android:text="Take Photo"
            android:textAllCaps="false" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/openPhotos"
            style="@style/BubbleButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginStart="5dp"
            app:icon="@drawable/outline_photo_library_24"
            android:textColor="@color/white"
            android:fontFamily="sans-serif"
            android:text="Select Photo"
            android:textAllCaps="false" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/translateBtnContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/buttonContainer"
        android:layout_centerInParent="true"
        android:layout_above="@id/nav">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/translate"
            style="@style/BubbleButtonStyle"
            android:layout_width="150dp"
            android:layout_height="65dp"
            android:textColor="@color/white"
            app:icon="@drawable/baseline_translate_24"
            android:fontFamily="sans-serif"
            android:text="Translate"
            android:textAllCaps="false" />

    </LinearLayout>


    <com.ismaeldivita.chipnavigation.ChipNavigationBar
        android:id="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_bar_shape"
        android:padding="15dp"
        android:layout_alignParentBottom="true"
        android:foregroundGravity="bottom"
        app:cnb_menuResource="@menu/menu_bar"
        android:layout_margin="10dp"
        app:cnb_iconSize="15dp"
        app:cnb_unselectedColor="#777777"/>

</RelativeLayout>
