<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@color/background_color"
    android:layout_height="match_parent"
    tools:context=".AlwaysAvailablePages.DownloadLanguageTranslatePackages">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/goBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/floatingActionBtn"
        android:layout_margin="20dp"
        android:src="@drawable/baseline_home_24"
        app:shapeAppearanceOverlay="@style/back_button" />

    <LinearLayout
        android:id="@+id/languageSelection"
        android:layout_width="match_parent"
        android:layout_above="@id/downloadTranslationPackageBtn"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/selectTranslateFrom"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:text="Translate From "
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_marginStart="5dp"
            android:fontFamily="sans-serif"
            app:icon="@drawable/baseline_arrow_drop_down_24"
            app:iconTint="@color/white"
            app:iconGravity="end"
            app:iconPadding="0dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:textAlignment="center"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:textColor="@color/white"
            android:background="@color/transparent"
            android:src="@drawable/baseline_arrow_right_alt_24"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/selectTranslateTo"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
            android:background="@color/transparent"
            android:text="Translate To"
            android:textColor="@color/white"
            android:fontFamily="sans-serif"
            android:textSize="15sp"
            app:icon="@drawable/baseline_arrow_drop_down_24"
            app:iconTint="@color/white"
            app:iconGravity="end"
            app:iconPadding="0dp" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:layout_marginTop="20dp"
        android:id="@+id/downloadTranslationPackageBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Install Language Package"
        android:layout_centerInParent="true"
        android:textAllCaps="false"
        app:icon="@drawable/outline_download_24"
        style="@style/BubbleButtonStyle"/>


    <com.ismaeldivita.chipnavigation.ChipNavigationBar
        android:id="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_bar_shape"
        android:padding="15dp"
        android:layout_alignParentBottom="true"
        android:foregroundGravity="bottom"
        app:cnb_menuResource="@menu/menu_bar"
        android:layout_margin="10dp"
        app:cnb_iconSize="15dp"
        app:cnb_unselectedColor="#777777"/>
</RelativeLayout>